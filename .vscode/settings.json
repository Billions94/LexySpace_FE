{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.fontLigatures": true,
  "editor.letterSpacing": 0.1,
  "editor.fontSize": 12.3,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "JetBrains Mono, Fira Code",
  "editor.codeActionsOnSave": {
    "source.fixAll.esbenp.prettier-vscode": true,
    "source.fixAll.format": true
  },
  "editor.tokenColorCustomizations": {
    "comments": "#787878a3",
    "types": "#f8f8f8c4",
    // "keywords": "#ded2d288",
    // "strings": "#f2e1b7c8",
    "[Gruvbox Dark Medium]": {
      "textMateRules": [
        {
          "scope": "variable.parameter",
          "settings": {
            "fontStyle": "italic",
            "foreground": "#f5f5f588"
          }
        },
        {
          "scope": "variable",
          "settings": {
            "fontStyle": "italic"
          }
        }
      ]
    }
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "function": { "bold": true, "fontStyle": "italic bold" },
      "property": "#a5f8f0bf",
      "variable": { "foreground": "#e2edf0df", "fontStyle": "italic" }
    }
  },
  "material-icon-theme.folders.color": "#f2e1b7"
}
